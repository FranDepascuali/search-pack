{
  "name": "code-search",
  "version": "1.0.0",
  "description": "Search code patterns with ripgrep and optionally package matching files with repomix for AI analysis",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "code-search": "dist/cli.js",
    "cs": "dist/cli.js"
  },
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx --config .eslintrc.cjs",
    "build": "npm run lint && tsc --outDir dist",
    "dev": "tsx src/cli.ts",
    "test": "npm run build && vitest --run",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "code-search",
    "ripgrep",
    "search",
    "repomix",
    "ai",
    "analysis",
    "cli",
    "developer-tools"
  ],
  "author": "Francisco Depascuali",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.6.0",
    "clipboardy": "^4.0.0",
    "commander": "^14.0.0",
    "execa": "^9.6.0",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "8.26.0",
    "@typescript-eslint/parser": "8.26.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-import": "^2.28.1",
    "prettier": "3.2.4",
    "tsx": "4.7.0",
    "typescript": "5.8.2",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.0.5"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/code-search.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/code-search/issues"
  },
  "homepage": "https://github.com/yourusername/code-search#readme"
}