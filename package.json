{
  "name": "search-pack",
  "version": "1.0.4",
  "description": "Search code patterns with ripgrep and optionally package matching files with repomix for AI analysis",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "search-pack": "dist/cli.js",
    "sp": "dist/cli.js"
  },
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx --config .eslintrc.cjs",
    "build": "npm run lint && tsc --outDir dist && chmod +x dist/cli.js",
    "dev": "tsx src/cli.ts",
    "test": "npm run build && vitest --run",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "search-pack",
    "ripgrep",
    "search",
    "repomix",
    "ai",
    "analysis",
    "cli",
    "developer-tools",
    "grep",
    "code-analysis"
  ],
  "author": "Francisco Depascuali",
  "license": "MIT",
  "dependencies": {
    "@vscode/ripgrep": "^1.15.14",
    "chalk": "^5.6.0",
    "commander": "^14.0.0",
    "execa": "^9.6.0",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "8.26.0",
    "@typescript-eslint/parser": "8.26.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-import": "^2.28.1",
    "prettier": "3.2.4",
    "tsx": "4.7.0",
    "typescript": "5.8.2",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.0.5"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FranDepascuali/search-pack.git"
  },
  "bugs": {
    "url": "https://github.com/FranDepascuali/search-pack/issues"
  },
  "homepage": "https://github.com/FranDepascuali/search-pack#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
